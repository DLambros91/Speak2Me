<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true"
          android:drawable="@drawable/button2" /> <!-- pressed -->
    <item android:state_pressed="false"
          android:drawable="@drawable/button1" />
    <item android:state_focused="true"
          android:drawable="@drawable/button2" /> <!-- focused -->
    <item android:state_long_pressable="true"
          android:drawable="@drawable/button2" /> <!-- long pressed -->
    <item android:drawable="@drawable/button1" /> <!-- default -->
</selector>